@model GuestDetail

<h1 class = "display-1 text-danger">
 Are you sure you want to delete this: @Model.Name
</h1>
<hr>
<div class = "border border-3 border-primary">
    <ul>
        <li>
            @Model.Name
        </li>
        <li>
            @Model.Email
        </li>
    </ul>
</div>

<form asp-action="DeleteGuest">
    <div>
        <input asp-for="@Model.Id" hidden>
        <button class = "btn btn-danger" type = "submit">Delete</button>
        <a asp-action="Index" class = "btn btn-secondary">Back to the guest list</a>
    </div>

</form>