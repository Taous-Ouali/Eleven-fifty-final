@model EventDetail

<h1 class = "display-1 text-danger">
 Are you sure you want to delete this: @Model.EventName
</h1>
<hr>
<div class = "border border-3 border-primary">
    <ul>
        <li>
            @Model.Description
        </li>
        <li>
            @Model.Date
        </li>
        <li>
            @Model.Location
        </li>
    </ul>
</div>

<form asp-action="DeleteEvent">
    <div>
        <input asp-for="@Model.Id" hidden>
        <button class = "btn btn-danger" type = "submit">Delete</button>
        <a asp-action="Index" class = "btn btn-secondary">Back to Scheduled events</a>
    </div>

</form>